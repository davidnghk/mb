<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= t :iran %>
              <small><%= t :business_trip %></small>
            </h1>
            <ol class="breadcrumb">
              <li><%= link_to t('homepage'), root_path %>
                </li>
                <li class="active"><%= t :iran %></li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                      <img class="img-responsive" src="<%= image_path 'iran3.jpg' %>" alt="">
                    </div>
                    <div class="item">
                      <img class="img-responsive" src="<%= image_path 'iran2.jpg' %>" alt="">
                    </div>
                    <div class="item">
                      <img class="img-responsive" src="<%= image_path 'iran1.jpg' %>" alt="">
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>

        <div class="col-md-4">
          <h3><%= t :business_trip %></h3>
          <p><%= t :business_trip_content %></h3>
            <ul>
              <li> 2016-7-1</li>
              <li> 2016-7-22</li>
              <li> 2016-8-1</li>
              <li> 2016-8-19</li><br><br>
              <a href="mailto:info@worldexhgroup.com?subject=Enquire%20Exhibition%20Information"><%= image_tag("mail.png") %></a> 
            </ul>
        </div>

    </div>
    <!-- /.row -->

    <div class="row">

        <div class="col-lg-12">
            <h3 class="page-header"><%=  t :exhibitions %></h3>
        </div>

        <div class="col-sm-4 col-xs-12">
<!--            <a href="#">-->
          <a>
              <%= link_to page_path('eventIraLed') do %>
              <% if I18n.locale == :en %>
                <img class="img-responsive img-hover img-related" src="<%= image_path '伊朗照明en.jpg' %>" alt="">
              <% else %>
                <img class="img-responsive img-hover img-related" src="<%= image_path '伊朗照明zh.jpg' %>" alt="">
              <% end %> 
            <% end %>
            </a>
        </div>

        <div class="col-sm-4 col-xs-12">
            <a>
              <%= link_to page_path('eventIraFur') do %>
              <% if I18n.locale == :en %>
                <img class="img-responsive img-hover img-related" src="<%= image_path '伊朗家具en.jpg' %>" alt="">
              <% else %>
                <img class="img-responsive img-hover img-related" src="<%= image_path '伊朗家具zh.jpg' %>" alt="">
              <% end %>
              <% end %>
            </a>
        </div>

        <div class="col-sm-4 col-xs-12">
            <a>
              <%= link_to page_path('eventIraMac') do %>
              <% if I18n.locale == :en %>
                <img class="img-responsive img-hover img-related" src="<%= image_path '伊朗木机en.jpg' %>" alt="">
              <% else %>
                <img class="img-responsive img-hover img-related" src="<%= image_path '伊朗木机zh.jpg' %>" alt="">
              <% end %>
              <% end %>
            </a>
        </div>

<!--
        <div class="col-sm-3 col-xs-6">
            <a href="#">
                <img class="img-responsive img-hover img-related" src="http://placehold.it/500x300" alt="">
            </a>
        </div>
-->

    </div>

    <!-- /.row -->

</div>
<!-- /.container -->