<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= t :iran %>
              <small><%= t :exhibition %></small>
            </h1>
            <ol class="breadcrumb">
              <li><%= link_to t('homepage'), root_path %>
                </li>
                <li class="active"><%= t :iran %></li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img class="img-responsive" src="/assets/iran1.jpg" alt="">
                    </div>
                    <div class="item">
                        <img class="img-responsive" src="/assets/iran2.jpg" alt="">
                    </div>
                    <div class="item">
                        <img class="img-responsive" src="/assets/iran3.jpg" alt="">
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>

        <div class="col-md-4">
          <h3><%= t :iran %></h3>
          <p><%=  t :iran_econ %></h3>
            <ul>
              <li><strong><%=  t :population %></strong>: <%=  t :iran_population %></li>
              <li><strong><%=  t :gdp %></strong>: <%=  t :iran_gdp %></li>
              <li><strong><%=  t :per_capita %></strong>: <%=  t :iran_per_capita %></li>
            </ul>
        </div>

    </div>
    <!-- /.row -->

    <!-- Related Projects Row -->

    <div class="row">

        <div class="col-lg-12">
            <h3 class="page-header"><%=  t :exhibitions %></h3>
        </div>

        <div class="col-sm-4 col-xs-12">
<!--            <a href="#">-->
          <a>
              <%= link_to page_path('eventIraLed') do %>
              <% if I18n.locale == :en %>
                <img class="img-responsive img-hover img-related" src="/assets/伊朗照明en.jpg" alt="">
              <% else %>
                <img class="img-responsive img-hover img-related" src="/assets/伊朗照明zh.jpg" alt="">
              <% end %> 
            <% end %>
            </a>
        </div>

        <div class="col-sm-4 col-xs-12">
            <a>
              <%= link_to page_path('eventIraFur') do %>
              <% if I18n.locale == :en %>
                <img class="img-responsive img-hover img-related" src="/assets/伊朗家具en.jpg" alt="">
              <% else %>
                <img class="img-responsive img-hover img-related" src="/assets/伊朗家具zh.jpg" alt="">
              <% end %>
              <% end %>
            </a>
        </div>

        <div class="col-sm-4 col-xs-12">
            <a>
              <%= link_to page_path('eventIraMac') do %>
              <% if I18n.locale == :en %>
                <img class="img-responsive img-hover img-related" src="/assets/伊朗木机en.jpg" alt="">
              <% else %>
                <img class="img-responsive img-hover img-related" src="/assets/伊朗木机zh.jpg" alt="">
              <% end %>
              <% end %>
            </a>
        </div>

<!--
        <div class="col-sm-3 col-xs-6">
            <a href="#">
                <img class="img-responsive img-hover img-related" src="http://placehold.it/500x300" alt="">
            </a>
        </div>
-->

    </div>

    <!-- /.row -->

</div>
<!-- /.container -->