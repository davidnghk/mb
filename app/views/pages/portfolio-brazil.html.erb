<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= t :brazil %>
              <small><%= t :exhibition %></small>
            </h1>
            <ol class="breadcrumb">
              <li><%= link_to t('homepage'), root_path %>
                </li>
                <li class="active"><%= t :brazil %></li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img class="img-responsive" src="/assets/brastd01.jpg" alt="">
                    </div>
                    <div class="item">
                        <img class="img-responsive" src="/assets/brastd03.jpg" alt="">
                    </div>
                    <div class="item">
                        <img class="img-responsive" src="/assets/brastd02.jpg" alt="">
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>

        <div class="col-md-4">
          <h3><%= t :brazil %></h3>
          <p><%=  t :brazil_econ %></h3>
            <ul>
              <li><strong><%=  t :population %></strong>: <%=  t :brazil_population %></li>
              <li><strong><%=  t :gdp %></strong>: <%=  t :brazil_gdp %></li>
              <li><strong><%=  t :per_capita %></strong>: <%=  t :brazil_per_capita %></li>
              <li><strong><%=  t :export %></strong>: <%=  t :brazil_export %></li>
              <li><strong><%=  t :import %></strong>: <%=  t :brazil_import %></li>
            </ul>
        </div>

    </div>
    <!-- /.row -->

    <!-- Related Projects Row -->

    <div class="row">

        <div class="col-lg-12">
            <h3 class="page-header">Related Projects</h3>
        </div>

        <div class="col-sm-4 col-xs-12">
            <a href="#">
              <% if I18n.locale == :en %>
                <img class="img-responsive img-hover img-related" src="/assets/巴西照明en.jpg" alt="">
              <% else %>
                <img class="img-responsive img-hover img-related" src="/assets/巴西照明zh.jpg" alt="">
              <% end %> 
            </a>
        </div>

        <div class="col-sm-4 col-xs-12">
            <a href="#">
              <% if I18n.locale == :en %>
                <img class="img-responsive img-hover img-related" src="/assets/巴西家具en.jpg" alt="">
              <% else %>
                <img class="img-responsive img-hover img-related" src="/assets/巴西家具zh.jpg" alt="">
              <% end %>
            </a>
        </div>

        <div class="col-sm-4 col-xs-12">
            <a href="#">
              <% if I18n.locale == :en %>
                <img class="img-responsive img-hover img-related" src="/assets/巴西木机en.jpg" alt="">
              <% else %>
                <img class="img-responsive img-hover img-related" src="/assets/巴西木机zh.jpg" alt="">
              <% end %>
            </a>
        </div>

